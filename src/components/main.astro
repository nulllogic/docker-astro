---
import Toc from "./toc.astro";

---
<main class="main">
    <div class="intro">
    </div>
    <div class="toc">
        <Toc />
    </div>
    <div class="content">
        <slot/>
    </div>
</main>
<style lang="scss">
    .main {
        grid-area: main
    }

    @media (max-width: 991.98px) {
        .main {
            max-width: 760px;
            margin-inline: auto
        }
    }

    @media (min-width: 768px) {
        .main {
            display: grid;
            grid-template-areas: "intro" "toc" "content";
            grid-template-rows: auto auto 1fr;
            gap: inherit
        }
    }

    @media (min-width: 992px) {
        .main {
            grid-template-areas: "intro toc" "content toc";
            grid-template-rows: auto 1fr;
            grid-template-columns:4fr 1fr
        }
    }

    .intro {
        grid-area: intro;
    }

    .toc {
        grid-area: toc;

        position: sticky;
        top: 5rem;
        right: 0;
        z-index: 2;
        overflow-y: auto;
    }

    .content {
        grid-area: content;
    }

</style>
