---
import { Debug } from 'astro/components';
import Docs from '~/layouts/docs.astro';

const {version, lang, slug} = Astro.params;

const content = await Astro.glob('../../../../../data/docs/1.0/en/**/*.md');

const post = content.find(({file}) => file === '/app/data/docs/' + version + '/' + lang + '/' + slug + '.md');
const {title, layout} = post.frontmatter;

// const { Content } = pages.find((p) => p.url.endsWith(Astro.params.slug));
---
<Docs>
    <div class="container">
        <div class="col-md-12">
            {title}
            <div set:html={post.compiledContent()} />
        </div>
    </div>
</Docs>